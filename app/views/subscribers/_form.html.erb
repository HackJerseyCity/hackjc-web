<% subscriber ||= @subscriber %>
<div id="signup_form">
  <%= form_with model: subscriber, class: "flex flex-col sm:flex-row gap-3" do |form| %>
    <div class="flex-1 max-w-xs">
      <%= form.email_field :email,
          placeholder: "you@example.com",
          class: "w-full px-4 py-2.5 bg-white border border-stone-300 rounded-lg text-stone-900 placeholder-stone-400 focus:outline-none focus:border-stone-900 focus:ring-1 focus:ring-stone-900 transition-colors text-sm",
          autocomplete: "email",
          required: true %>
    </div>

    <%= form.submit "Subscribe",
        class: "px-5 py-2.5 bg-stone-900 text-white font-medium rounded-lg hover:bg-stone-800 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:ring-offset-2 transition-colors cursor-pointer text-sm" %>
  <% end %>

  <% if subscriber&.errors&.any? %>
    <p class="mt-3 text-red-600 text-sm">
      <%= subscriber.errors.full_messages.first %>
    </p>
  <% end %>
</div>

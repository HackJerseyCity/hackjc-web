<% subscriber ||= @subscriber %>
<div id="signup_form">
  <%= form_with model: subscriber, class: "flex flex-col sm:flex-row gap-3" do |form| %>
    <div class="flex-1">
      <%= form.email_field :email,
          placeholder: "your@email.com",
          class: "w-full px-4 py-3 bg-neutral-50 border border-neutral-200 rounded-xl text-[15px] text-neutral-900 placeholder-neutral-300 focus:outline-none focus:bg-white focus:border-neutral-400 transition-all duration-200",
          autocomplete: "email",
          required: true %>
    </div>

    <%= form.submit "Subscribe",
        class: "px-6 py-3 bg-neutral-900 text-white text-[13px] font-medium tracking-wide rounded-xl hover:bg-neutral-800 focus:outline-none focus:ring-2 focus:ring-neutral-900 focus:ring-offset-2 transition-all duration-200 cursor-pointer" %>
  <% end %>

  <% if subscriber&.errors&.any? %>
    <p class="mt-4 text-red-500/80 text-[13px]">
      <%= subscriber.errors.full_messages.first %>
    </p>
  <% end %>
</div>
